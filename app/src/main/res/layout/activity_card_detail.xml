<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/syscolor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/syscolor"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/syscolor"

            >


            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerInside"
                android:src="@drawable/back"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center|left"
                />
            <ImageView
                android:id="@+id/profile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerInside"
                android:src="@drawable/profile1"
                android:layout_marginLeft="15dp"
                android:elevation="2dp"
                android:layout_gravity="center|left"
                />
            <TextView
                android:id="@+id/card_author"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="详情"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center|left"
                android:textSize="12sp"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/wiji"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerInside"
                android:src="@drawable/snipaste"
                android:layout_gravity="center|right"
                android:layout_marginRight="15dp"
                />
        </androidx.appcompat.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/light_black" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:src="@drawable/a8cf7caf499b6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/syscolor"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="title"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/location1"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:text="location"

                    android:layout_gravity="center"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/background_gray"

                android:layout_height="200dp"
                android:layout_marginTop="30dp"

                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:background="@drawable/border_shape">
                    <ImageButton
                        android:id="@+id/satellite"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/shape_button_test"
                        android:gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/satellite" />
                    <TextView
                        android:id="@+id/satellite1"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="10sp"
                        android:text="切换卫星图"/>

                </LinearLayout>
                <com.tencent.tencentmap.mapsdk.maps.TextureMapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="0.1dp"
                android:background="@color/light_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:text="Inception_v3模型特征提取:"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="12sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="vertical"
                android:layout_marginRight="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/round"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold">
                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:background="@drawable/rounded_box_black" />
                        <TextView
                            android:id="@+id/featuresTagTextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:text="brass | 89.95%"
                            android:textColor="@color/RosyBrown"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/round"
                        android:gravity="center"
                        android:textStyle="bold">
                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rounded_box_black" />

                        <TextView
                            android:id="@+id/featuresTagTextView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:text="menu | 00.78%"
                            android:textSize="12sp"
                            android:textColor="@color/RosyBrown"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:textStyle="bold">
                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:background="@drawable/rounded_box_black" />

                    <TextView
                        android:id="@+id/featuresTagTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:text="packet | 00.24%"
                        android:textSize="12sp"
                        android:textColor="@color/RosyBrown"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:text="ResNet50模型特征提取:"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="12sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="vertical"
                android:layout_marginRight="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/round"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold">
                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:background="@drawable/rounded_box_black" />
                        <TextView
                            android:id="@+id/ResNetFeaturesTagTextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:text="brass | 89.95%"
                            android:textSize="12sp"
                            android:textColor="@color/RosyBrown"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/round"
                        android:gravity="center"
                        android:textStyle="bold">
                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rounded_box_black" />

                        <TextView
                            android:id="@+id/ResNetFeaturesTagTextView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:text="menu | 00.78%"
                            android:textSize="12sp"
                            android:textColor="@color/RosyBrown"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:textStyle="bold">
                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/rounded_box_black" />

                    <TextView
                        android:id="@+id/ResNetFeaturesTagTextView3"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="packet | 00.24%"
                        android:textSize="12sp"
                        android:textColor="@color/RosyBrown"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:text="KMeans色系提取:"
                android:textColor="@color/white"
                android:textSize="12sp"

                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/round"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textStyle="bold">
                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/rounded_box_black" />
                        />
                        <TextView
                            android:id="@+id/colorTextView1"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="#44494d" />
                        />
                        <TextView
                            android:id="@+id/tagTextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:text="[68,73,77]"
                            android:textSize="10sp"
                            android:textColor="@color/RosyBrown"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/round"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold">
                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/rounded_box_black" />
                        />
                        <TextView
                            android:id="@+id/colorTextView2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="#8f9090" />
                        />
                        <TextView
                            android:id="@+id/tagTextView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:text="[143,144,144]"
                            android:textSize="10sp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/RosyBrown"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        android:background="@drawable/round"
                        android:gravity="center"
                        android:textStyle="bold">
                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:background="@drawable/rounded_box_black" />
                        />
                        <TextView
                            android:id="@+id/colorTextView3"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="#e4edf5" />
                        />
                        <TextView
                            android:id="@+id/tagTextView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:text="[228,237,245]"
                            android:textSize="10sp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/RosyBrown"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
<!--        <androidx.viewpager.widget.ViewPager-->
<!--            android:id="@+id/viewPager"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:elevation="20dp"/>-->

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="0.1dp"
            android:background="@color/light_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="相关推荐"

                />
<!--            <View-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:layout_height="0.1dp"-->
<!--                android:background="@color/light_black" />-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold|italic"
                android:text="加载中...请稍后..."

                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/syscolor" />


    </LinearLayout>
</ScrollView>
